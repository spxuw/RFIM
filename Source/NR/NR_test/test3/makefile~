#            Makefile for test3.cpp                         #
#                     Yang Liu                             #
#                     06/27/05                             #
############################################################
# home directory
BASE = /home/yangliu/work/C++ing/NR/cpp

# directory for include files
INCLS = -I$(BASE)/other 

# head file
HEAD = $(BASE)/other/nr.h

############################################################
# main file
MAIN = xjacobi.cpp
OBJMAIN = xjacobi.o 

# numerical recipe file  
RECIPES = $(BASE)/recipes/jacobi.cpp 

OBJRECIPES = jacobi.o   

############################################################

# object file 
OBJS = $(OBJMAIN) $(OBJRECIPES)

# executable file
EXE = run

# macro for name of my compiler: 
CC   = g++

# macro for compilation options:
CFLAG = -O

$(EXE): $(OBJS) 
	@echo "linking ..."
	$(CC) $(CFLAG) -o $(EXE) $(OBJS)

$(OBJMAIN): $(MAIN) $(HEAD) 
	$(CC) $(CFLAG) -c $*.cpp $(INCLS)

$(OBJRECIPES): $(RECIPES) $(HEAD)
	$(CC) $(CFLAG) -c $(RECIPES) $(INCLS)

clean:	
	rm -f $(OBJS) $(EXE)


